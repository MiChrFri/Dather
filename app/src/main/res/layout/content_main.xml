<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorDarkBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, place your mobile phone display-up on your desk and make sure it has enough battery when you start the gathering! Thanks for your help :D"
        android:id="@+id/textView"
        android:textColor="@color/colorLight"
        android:textSize="18dp"
        android:visibility="invisible"
        android:paddingTop="20dp"
        android:layout_alignBaseline="@+id/steps"
        android:layout_alignBottom="@+id/steps"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/username"
        android:textColor="@color/colorLightBlue"
        android:textSize="24dp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:visibility="invisible"
        android:layout_alignTop="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="light:"
        android:id="@+id/light"
        android:textColor="@color/colorLight"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="acc: 1 \n2\n3"
        android:lines="3"
        android:id="@+id/acc"
        android:textColor="@color/colorLight"
        android:textSize="24dp"
        android:layout_below="@+id/steps"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="volume:"
        android:id="@+id/volume"
        android:textColor="@color/colorLight"
        android:textSize="24dp"
        android:layout_below="@+id/light"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="steps: "
        android:id="@+id/steps"
        android:textColor="@color/colorLight"
        android:textSize="24dp"
        android:layout_below="@+id/volume"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="location: 1\n2"
        android:id="@+id/location"
        android:lines="2"
        android:textColor="@color/colorLight"
        android:textSize="24dp"
        android:layout_below="@+id/acc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
